/dts-v1/;

#include <dt-bindings/input/input.h>
#include "imx6ull.dtsi"
#include "imx6ul-imx6ull-var-dart-common.dtsi"
#include "stonehenge-big-common.dtsi"
#include "wireless-ti1835.dtsi"

/ {		
	joystick {
		compatible = "gpio-keys";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_joy>;

		joystick_u {
			label = "BUTTONS.JS_U";
			gpios = <&gpio5 5 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_UP>;
			gpio-key,wakeup;
		};

		joystick_d {
			label = "BUTTONS.JS_D";
			gpios = <&gpio5 6 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_DOWN>;
			gpio-key,wakeup;
		};

		joystick_c {
			label = "BUTTONS.JS_C";
			gpios = <&gpio5 7 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_ENTER>;
			gpio-key,wakeup;
		};

		joystick_r {
			label = "BUTTONS.JS_R";
			gpios = <&gpio5 8 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_RIGHT>;
			gpio-key,wakeup;
		};

		joystick_l {
			label = "BUTTONS.JS_L";
			gpios = <&gpio5 9 GPIO_ACTIVE_LOW>;
			linux,code = <KEY_LEFT>;
			gpio-key,wakeup;
		};

	};

	init-gpios-aventura {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_sdcard>;
	};
};

&adc1 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_adc1>;
	status = "okay";
};

&usbotg2 {
	dr_mode = "host";
	disable-over-current;
	status = "okay";
};

&iomuxc {
	imx6ul-evk {
		pinctrl_sdcard: sdcardgrp {
			fsl,pins = <								
                MX6UL_PAD_CSI_DATA02__GPIO4_IO23                0x1b0b0 /* SD_SWITCH */
                MX6UL_PAD_ENET1_TX_EN__GPIO2_IO05               0x1b0b0 /* SD_DETECT */				
			>;			
		};

		pinctrl_joy: joy1grp {
			fsl,pins = <
				MX6UL_PAD_SNVS_TAMPER5__GPIO5_IO05		0x110b0
				MX6UL_PAD_SNVS_TAMPER6__GPIO5_IO06		0x110b0
				MX6UL_PAD_SNVS_TAMPER7__GPIO5_IO07		0x110b0
				MX6UL_PAD_SNVS_TAMPER8__GPIO5_IO08		0x110b0
				MX6UL_PAD_SNVS_TAMPER9__GPIO5_IO09		0x110b0
			>;
		};		
		
		pinctrl_adc1: adc1grp {
			fsl,pins = <
				MX6UL_PAD_GPIO1_IO06__GPIO1_IO06 0xb0
			>;
		};	
	};
};
